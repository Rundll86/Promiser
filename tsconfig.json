{
    "compilerOptions": {
        "target": "ESNext",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
            "@promiser/*": [
                "./promiser/src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ]
}